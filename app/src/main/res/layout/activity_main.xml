<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.example.tictactoe.viewmodel.TicTacToeViewModel" />
    </data>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MainActivity">


        <TextView
            android:id="@+id/game_state_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/board"
            android:textColor="@color/colorText"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="@{viewModel.textViewText}"
            />

        <GridLayout
            android:id="@+id/board"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:columnCount="3"
            android:rowCount="3"
            >


                <Button
                    android:tag="0_0"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:onClick="@{() -> viewModel.onButtonSelected(0, 0)}"
                    android:text='@{viewModel.boardContent["0_0"]}'
                    android:enabled='@{viewModel.boardStatus["0_0"]}'
                    android:background="@android:drawable/btn_default"
                    android:textStyle="bold"
                    android:textSize="72sp" />
                <Button
                    android:tag="0_1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:onClick="@{() -> viewModel.onButtonSelected(0, 1)}"
                    android:text='@{viewModel.boardContent["0_1"]}'
                    android:enabled='@{viewModel.boardStatus["0_1"]}'
                    android:background="@android:drawable/btn_default"
                    android:textStyle="bold"
                    android:textSize="72sp" />
                <Button
                    android:tag="0_2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:onClick="@{() -> viewModel.onButtonSelected(0, 2)}"
                    android:text='@{viewModel.boardContent["0_2"]}'
                    android:enabled='@{viewModel.boardStatus["0_2"]}'
                    android:background="@android:drawable/btn_default"
                    android:textStyle="bold"
                    android:textSize="72sp" />

                <Button
                    android:tag="1_0"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:onClick="@{() -> viewModel.onButtonSelected(1, 0)}"
                    android:text='@{viewModel.boardContent["1_0"]}'
                    android:enabled='@{viewModel.boardStatus["1_0"]}'
                    android:background="@android:drawable/btn_default"
                    android:textStyle="bold"
                    android:textSize="72sp" />
                <Button
                    android:tag="1_1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:onClick="@{() -> viewModel.onButtonSelected(1, 1)}"
                    android:text='@{viewModel.boardContent["1_1"]}'
                    android:enabled='@{viewModel.boardStatus["1_1"]}'
                    android:background="@android:drawable/btn_default"
                    android:textStyle="bold"
                    android:textSize="72sp" />
                <Button
                    android:tag="1_2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:onClick="@{() -> viewModel.onButtonSelected(1, 2)}"
                    android:text='@{viewModel.boardContent["1_2"]}'
                    android:enabled='@{viewModel.boardStatus["1_2"]}'
                    android:background="@android:drawable/btn_default"
                    android:textStyle="bold"
                    android:textSize="72sp" />

                <Button
                    android:tag="2_0"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:onClick="@{() -> viewModel.onButtonSelected(2, 0)}"
                    android:text='@{viewModel.boardContent["2_0"]}'
                    android:enabled='@{viewModel.boardStatus["2_0"]}'
                    android:background="@android:drawable/btn_default"
                    android:textStyle="bold"
                    android:textSize="72sp" />
                <Button
                    android:tag="2_1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:onClick="@{() -> viewModel.onButtonSelected(2, 1)}"
                    android:text='@{viewModel.boardContent["2_1"]}'
                    android:enabled='@{viewModel.boardStatus["2_1"]}'
                    android:background="@android:drawable/btn_default"
                    android:textStyle="bold"
                    android:textSize="72sp" />
                <Button
                    android:tag="2_2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:onClick="@{() -> viewModel.onButtonSelected(2, 2)}"
                    android:text='@{viewModel.boardContent["2_2"]}'
                    android:enabled='@{viewModel.boardStatus["2_2"]}'
                    android:background="@android:drawable/btn_default"
                    android:textStyle="bold"
                    android:textSize="72sp" />
        </GridLayout>

        <Button
            android:id="@+id/new_game_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> viewModel.onResetSelected()}"
            android:text="@string/new_game"
            android:layout_below="@+id/board"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</layout>